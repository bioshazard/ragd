DATABASE_URL=postgresql://user:pass@localhost:5432/ragd
OPENAI_BASE_URL=http://localhost:8000/v1
OPENAI_API_KEY=openai
EMBED_MODEL=mxbai-embed-large:latest
EMBED_DIMS=1024
LLM_MODEL_DEFAULT=gpt-4o-mini
# Optional: override LLM endpoint/key if you don't want to reuse OPENAI_*.
# LLM_BASE_URL=
# LLM_API_KEY=
RAGD_AUTO_MIGRATE=true
CHUNK_TARGET_TOKENS=600
CHUNK_OVERLAP_TOKENS=120
# Optional: upper bound on chunk size.
CHUNK_MAX_CHARS=4000
# Optional: derive overlap from percent or ratio (ignored if CHUNK_OVERLAP_TOKENS is set).
# CHUNK_OVERLAP_PERCENT=15
# CHUNK_OVERLAP_RATIO=0.15
EMBED_BATCH_SIZE=64
SEARCH_CANDIDATE_POOL=50
SEARCH_RRF_K=60
